<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="Comment">
    <insert id="save" parameterType="comment">
        insert into commentRecipe_table(commentWriter, commentContents, commentCreatedDate, boardId)
            value (#{commentWriter}, #{commentContents}, now(), #{boardId})
    </insert>

    <select id="findAll" parameterType="Long" resultType="comment">
        select * from commentRecipe_table where boardId=#{boardId} order by id desc
    </select>

